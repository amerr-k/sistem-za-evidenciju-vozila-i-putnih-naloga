@using X.PagedList.Mvc.Core
@using X.PagedList;
@using X.PagedList.Mvc.Common

@model IPagedList<sistem_za_evidenciju_vozila_i_putnih_naloga.ViewModels.TWIndexVM>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="travel-warrant-table-id" class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-page="@ViewData["PageParam"]" asp-route-sortOrder="@ViewData["IdSortParm"]">@Html.DisplayNameFor(model => model.First().TravelWarrantId)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-page="@ViewData["PageParam"]" asp-route-sortOrder="@ViewData["CarSortParm"]">@Html.DisplayNameFor(model => model.First().Car)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.First().StartEndTime)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.First().StartEndLocation)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-page="@ViewData["PageParam"]" asp-route-sortOrder="@ViewData["StatusSortParm"]">@Html.DisplayNameFor(model => model.First().Status)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TravelWarrantId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartEndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartEndLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="TravelWarrants" asp-route-id="@item.TravelWarrantId">Akcija</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
   new PagedListRenderOptionsBase
   {
       LiElementClasses = new string[] { "page-item" },
       PageClasses = new string[] { "page-link" }
   })


